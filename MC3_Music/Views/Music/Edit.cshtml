@model MC3_Music.Models.Album
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-lg-1"></div>
    <h2>Edit Album</h2>
</div>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        @using (Html.BeginForm("Edit", "Music", FormMethod.Post, new { album = Model }))
        {
            @Html.ValidationSummary(true, "Please fix the following errors.")
            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.EditorFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Artist)
                @Html.EditorFor(model => model.Artist, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Artist)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Genre)
                @Html.EditorFor(model => model.Genre, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Genre)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ImageURL)
                @Html.EditorFor(model => model.ImageURL, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ImageURL)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.EditorFor(model => model.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Price)
            </div>
            @Html.HiddenFor(model => model.Id)
            @Html.AntiForgeryToken()
            <button type="submit" class="btn-primary">Save</button>
        }
    </div>

</div>

