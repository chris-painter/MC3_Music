@model MC3_Music.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";

}

@*@*<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">*@
<link href="@Url.Content("/css/style.css")" rel="stylesheet">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<section id="ForgotPassword">
    <div class="row">
        <div class="container">
            <div class="col-xs-6">
                <div class="form-group">
                    <h1>Enter Email</h1>
                    <form role="form" action="javascript:;" method="post" id="forgot-form" autocomplete="off">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="somebody@example.com">
                        </div>
                        <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Email Link">
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>

</section>
